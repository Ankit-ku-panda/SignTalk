            <Button android:id="@+id/e7" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1" android:text="ðŸ’§"/>
            <Button android:id="@+id/e8" android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1" android:text="ðŸ“ž"/>

        </GridLayout>

        <!-- Translate Button -->

        <Button
            android:id="@+id/translateBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Translate Sentence" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Phrase"/>

        <Button
            android:id="@+id/loadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Saved Phrase"/>


        <!-- Clear Button -->
        <Button
            android:id="@+id/clearBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Clear"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/cameraBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
